<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shipping Estimates</title>
</head>
<body>
  @using ShippingEstimates.Models;

  <h1>Welcome to the Shipping Center!</h1>

  <h2>Please enter the weight and dimensions for your package:</h2>

  <form action="/parcels" method="post">

    <label for="length">Length:</label>
    <input id="length" name="length" type="number">

    <label for="width">Width:</label>
    <input id="width" name="width" type="number">
    
    <label for="height">Height:</label>
    <input id="height" name="height" type="number">
    <br />
    <label for="weight">Weight:</label>
    <input id="weight" name="weight" type="number">
    <br />
    <button type="submit">Calculate Shipping</button>
  </form>

  @* null-conditional evaluates to null if object is not instantiated *@
  @if (Model?.Weight != null)
  {
    <div class="container">
      <h3>Your Shipping Estimate:</h3>
      <ul>
        <li>Length: @Model.Length</li>
        <li>Width: @Model.Width</li>
        <li>Height: @Model.Height</li>
        <li>Weight: @Model.Weight</li>
        <li>Parcel Volume: @Model.Volume()</li>
        <li>Shipping Cost: $@Model.CostToShip()</li>
      </ul>
    </div>
  }


</body>
</html>